    margin: 5px 5px 0px 5px;
    border-radius: 5px;
    color: #8a8a8a;
    background-color: #ffffff;
    position: relative;
}
.image {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    width: 100%;
    height: 140px;
    background-color: #eeeeee;
}
.title {
  font-size: 15px;
  margin-left: 10px;
}
.home_community_look_icon {
  vertical-align: middle;
  width: 14px;
  height: 14px;
  margin-left: 10px;
}
.home_community_join_icon {
  vertical-align: middle;
  width: 14px;
  height: 14px;
  margin-left: 15px;
}
.home_community_span {
  font-size: 12px;
}


.home_focus_item {
  height: 400rpx;
  width: 100%;
}
.home_focus_teacher_img {
  vertical-align: middle;
  height: 50px;
  width: 50px;
  border-radius: 50%;
  margin: 10px;
}
.home_focus_teacher_name {
  font-size: 26rpx;
  color: #D8C7C9;
  margin-right: 20px;
}
.home_focus_teacher_subject {
  font-size: 26rpx;
  color: #D8C7C9;
}
.home_focus_item_body {
  font-size: 30rpx;
  color: rgb(247, 243, 243);
  text-align: center;
}
.home_focus_item_body_button {
  width: 100%;
}
.home_focus_item_button {
  font-size: 26rpx;
  border-radius: 0px;
  width: 110px;
  height: 70rpx;
  background-color: #d81e06;
  color: #FFF;
  margin-top: 10px;
  margin-right: 15px;
  float: right;
}