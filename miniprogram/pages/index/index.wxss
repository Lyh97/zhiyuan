}
.home_remen_point {
  vertical-align: middle;
  height: 18px;
  width: 18px;
}
.home_info {
  margin-top: 20rpx;
  background-color: #FFF;
}
.home_info_item_title {
  font-size: 15px;
  margin-bottom: 6px;
}
.home_info_item_body {
  font-size: 12px;
  color: #8a8a8a;
}
.home_info_item {
  padding: 10px;
