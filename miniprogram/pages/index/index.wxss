}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.home_searchicon {
  vertical-align: middle;
  height: 1.58823529em;
  width:1.58823529em;
}
.home_input {
  font-size: 13px;
}
.home_searchButton {
  width: 30px;
}
.home_search {
  padding: 0px 10px;
  background-color: #F2F4F8;
  border-radius: 50px;
}
.home_head {
  margin-top: 5rpx;
  padding: 0px 20px;
  position: inherit;
}
.home_navbar {
  background-color: #FFF;
  border: 0rpx;
}
.home_notable {
  width: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.home_body {
  padding-top: 44px;
}
.home_persion {
  height: 100%;
  background-color: #F2F4F8;
}
.home_remen {
  padding: 10px 15px;
  background-color: #FFF;
}
.home_remenIcon {
  vertical-align: middle;
  height: 17px;
  width: 17px;
  margin-right: 5px;
}
.home_remen_title {
  font-size: 15px;
  margin-bottom: 10px;
}
.home_remen_body {
  margin-left: 0px;
  font-size: 13px;
